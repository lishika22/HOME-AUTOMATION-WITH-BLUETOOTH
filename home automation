// Home Automation Bluetooth Control Code

char data = 0; // Variable to store received data

void setup() {
  Serial.begin(9600);       // Start serial communication with HC-05
  pinMode(8, OUTPUT);       // Relay 1 connected to pin 8
  pinMode(9, OUTPUT);       // Relay 2 connected to pin 9

  digitalWrite(8, LOW);     // Devices OFF at start
  digitalWrite(9, LOW);
}

void loop() {
  if (Serial.available()) {
    data = Serial.read();   // Read the incoming byte

    // Control Relay 1
    if (data == 'A') {
      digitalWrite(8, HIGH); // Turn ON device 1
    } 
    else if (data == 'a') {
      digitalWrite(8, LOW);  // Turn OFF device 1
    }

    // Control Relay 2
    else if (data == 'B') {
      digitalWrite(9, HIGH); // Turn ON device 2
    } 
    else if (data == 'b') {
      digitalWrite(9, LOW);  // Turn OFF device 2
    }
  }
}
